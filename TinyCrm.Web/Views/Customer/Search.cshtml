@model TinyCrm.Web.Models.SearchCustomerViewModel


<form method="post" action="@Url.Action("search", "customer")">

    <div class="form-group">
        <label for="@Html.IdFor(c => c.SearchOptions.VatNumber)">Vat Number</label>
        @Html.TextBoxFor(c => c.SearchOptions.VatNumber, new { @class = "form-control" })
        <small id="emailHelp" class="form-text text-muted">
            Vat number should be 9 digits
        </small>
    </div>

    <div class="form-group">
        <label for="@Html.IdFor(c => c.SearchOptions.Email)">Email</label>
        @Html.TextBoxFor(c => c.SearchOptions.Email, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label for="@Html.IdFor(c => c.SearchOptions.Created)">Date Created</label>
        @Html.TextBoxFor(c => c.SearchOptions.Created, new { @class = "form-control" })
        <small id="dateHelp" class="form-text text-muted">
            Enter the date Customer created
        </small>
    </div>

    <div class="form-group">
        <label for="@Html.IdFor(c => c.SearchOptions.CustomerId)">Customer Id</label>
        @Html.TextBoxFor(c => c.SearchOptions.CustomerId, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label for="@Html.IdFor(c => c.SearchOptions.LastName)">Lastname</label>
        @Html.TextBoxFor(c => c.SearchOptions.LastName, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label for="@Html.IdFor(c => c.SearchOptions.FirstName)">Firstname</label>
        @Html.TextBoxFor(c => c.SearchOptions.FirstName, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label for="@Html.IdFor(c => c.SearchOptions.Phone)">Phone</label>
        @Html.TextBoxFor(c => c.SearchOptions.Phone, new { @class = "form-control" })
    </div>


    <button type="submit" class="btn btn-primary">Search</button>





</form>

@*@if (!string.IsNullOrWhiteSpace(Model?.ErrorText)) {
    <div class="alert alert-danger" role="alert">
        @Model?.ErrorText
    </div>*@


@{ if (Model.Customers.Count > 0) {
        <table class="table table-bordered">
            <thead>
                <tr>

                    <th scope="col">ID</th>
                    <th scope="col">Lastname</th>
                    <th scope="col">Firstname</th>
                    <th scope="col">Email</th>
                    <th scope="col">Phone</th>
                    <th scope="col">Country</th>
                    <th scope="col">IsActive</th>
                    <th scope="col">Created</th>
                </tr>
            </thead>
            <tbody>
                @{
                    var counter = 0;
                    foreach (var customer in Model.Customers) {

                        <tr>

                            <td>@customer.Id</td>
                            <td>@customer.Lastname</td>
                            <td>@customer.Firstname</td>
                            <td>@customer.Email</td>
                            <td>@customer.Phone</td>
                            <td>@customer.CoutryCode</td>
                            <td>@customer.IsActive</td>
                            <td>@customer.Created</td>

                        </tr>
                        counter++;
                    }
                }
            </tbody>
        </table>

        <div class="alert alert-success" role="alert">
            Total Result Found : @counter
        </div>
    }
} 